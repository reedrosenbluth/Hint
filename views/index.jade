  body
    script#template(type="x-tmpl-mustache")
      <div class="panel panel-default" id="hint">
      <a href="#" class="thumbnail pull-right" >
      <img src="{{ image }}" >
      </a>
      <div class="panel-body">
      <div class="hint_title">{{ title }}</div>
      <div class="hint_body">{{ body }}</div>
      </div>
      <div class="panel-footer">
      <a href="{{link}}" class="pin"> give me more <i class="fa fa-angle-right" style="margin-right:1px;"></i></a> </div>
      </div>
    script#template_no_image(type="x-tmpl-mustache")
      <div class="panel panel-default" id="hint">
      <div class="panel-body no-image">
      <div class="hint_title">{{ title }}</div>
      <div class="hint_body">{{ body }}</div>
      </div>
      <div class="panel-footer">
      <a href="{{link}}" class="pin"> give me more <i class="fa fa-angle-right" style="margin-right:1px;"></i></a> </div>
      </div>
